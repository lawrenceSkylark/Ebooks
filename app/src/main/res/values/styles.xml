<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="styleRoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>

    </style>
    <style name="CustomDialog"
        parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

    </style>
    <style name="styleCircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="range_time_label">
        <item name="android:textSize">@dimen/range_time_label_size</item>
        <item name="android:textColor">@color/range_numbers_text_color</item>
    </style>

    <style name="range_ampm_label">
        <item name="android:textSize">@dimen/range_ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/range_ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="range_day_of_week_label_condensed" />

    <style name="range_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/range_material_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="range_ActionButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/range_material_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/range_material_button_background</item>
        <item name="android:minWidth">@dimen/range_material_button_minwidth</item>
        <item name="android:paddingLeft">@dimen/range_material_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/range_material_button_textpadding_horizontal</item>
        <item name="android:textColor">@color/range_button_color</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>