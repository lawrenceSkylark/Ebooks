<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".Activities.CategoryAddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:background="@drawable/shape_toolbar01">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_white"/>

        <ImageView
            android:id="@+id/iconIv"
            android:layout_centerHorizontal="true"
            android:layout_width="110dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/bki2"
            android:layout_height="110dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconTv"
            android:layout_centerHorizontal="true"
            android:text="Add new Category"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"/>


    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryFill"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:hintEnabled="false"
        android:layout_marginTop="225dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext01"
            android:drawableStart="@drawable/ic_pdf_gray"
            android:padding="10dp"
            android:textColorHint="@color/gray01"
            android:inputType="textPersonName|textCapWords"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:id="@+id/categoryEt"
            android:hint="Category Title"
            android:drawableLeft="@drawable/ic_category_gray" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:text="Submit"
        
        android:layout_below="@id/categoryFill"
        android:textColor="@color/white"/>

</RelativeLayout>
